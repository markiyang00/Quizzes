@model Answer
<div class="row">
	<h3>Add Answer</h3>
	<form asp-action="AddAnswer" enctype="multipart/form-data" method="post" class="form-horizontal">
		<br />
		<br />
		<div type="hidden" class="form-group">
			<div type="hidden" class="col-md-5">
				<input type="hidden" asp-for="QuestionId" class="from-control" />
				<span type="hidden" asp-validation-for="QuestionId" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Text"></label>
			<input asp-for="Text" class="from-control" />
			<span asp-validation-for="Text" class="text-danger"></span>
		</div>
		<input class="btn btn-success" type="submit" value="AddQAnswer" />
	</form>
</div>