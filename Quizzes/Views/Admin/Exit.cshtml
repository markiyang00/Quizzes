@model AdminViewModel
<h2>Exit</h2><br />
<div class="row">
	<form asp-action="Exit" enctype="multipart/form-data" method="post" class="form-horizontal">
		@{
			if (Model != null)
			{
				if (!string.IsNullOrEmpty(Model.Mes))
				{
					<strong>@Model.Mes</strong>
				}
			}
		}
		<br />
		<br />
		<div class="form-group">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="from-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Password"></label>
			<input asp-for="Password" class="from-control" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<input class="btn btn-success" type="submit" value="Sign in" />
	</form>
</div>