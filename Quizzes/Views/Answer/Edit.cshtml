@model Answer
<div class="row">
	<h3>Edit Answer</h3>
	<form asp-controller="Answer" asp-action="Edit" enctype="multipart/form-data" method="post" class="form-horizontal">
		<br />
		<br />
		<div type="hidden" class="form-group">
			<div type="hidden" class="col-md-5">
				<input type="hidden" asp-for="Id" class="from-control" />
				<span type="hidden" asp-validation-for="Id" class="text-danger"></span>
			</div>
		</div>
		<div type="hidden" class="form-group">
			<div type="hidden" class="col-md-5">
				<input type="hidden" asp-for="QuestionId" class="from-control" />
				<span type="hidden" asp-validation-for="QuestionId" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Text"></label>
			<input asp-for="Text" class="from-control" />
			<span asp-validation-for="Text" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="True"></label>
			<input asp-for="True" class="from-control" />
			<span asp-validation-for="True" class="text-danger"></span>
		</div><br />
		<a class="btn btn-warning" asp-controller="Question" asp-action="Edit" asp-route-id="@Model.QuestionId">Back to Questions</a>
		<input class="btn btn-success" type="submit" asp-route-id="@Model.Id" value="Save Changes" />
	</form>
</div>