@model QuestionPageViewModel
<div>
	<strong>@Model.Test.Name</strong><br />
	<form asp-action="TestUser" enctype="multipart/form-data" method="post" class="form-horizontal">
		@if (!string.IsNullOrEmpty(Model.UrlTest.Name))
		{
			<label asp-for="UrlTest.Name">Username</label>
			<input asp-for="UrlTest.Name" class="from-control" disabled="disabled" />
			<span asp-validation-for="UrlTest.Name" class="text-danger"></span>
		}
		else
		{
			<label asp-for="UrlTest.Name">Username</label>
			<input asp-for="UrlTest.Name" class="from-control" />
			<span asp-validation-for="UrlTest.Name" class="text-danger"></span>
		}

		<br />
		<div type="hidden" class="form-group">
			<div type="hidden" class="col-md-5">
				<input type="hidden" asp-for="UrlTestAttend.Id" class="from-control" />
				<span type="hidden" asp-validation-for="UrlTestAttend.Id" class="text-danger"></span>
				<input type="hidden" asp-for="Question.Id" class="from-control" />
				<span type="hidden" asp-validation-for="Question.Id" class="text-danger"></span>
				<input type="hidden" asp-for="PrevQuestion.Id" class="from-control" />
				<span type="hidden" asp-validation-for="PrevQuestion.Id" class="text-danger"></span>
				<input type="hidden" asp-for="NextQuestion.Id" class="from-control" />
				<span type="hidden" asp-validation-for="NextQuestion.Id" class="text-danger"></span>
			</div>
		</div>
		<div>
			<strong>@Model.Question.Text</strong>
			@{
				var i = 1;
				foreach (var answer in Model.Answers)
				{
					<div>
						<div class="form-group">
							<input type="hidden" asp-for="Answers[i - 1].Id" class="from-control" />
							<span type="hidden" asp-validation-for="Answers[i - 1].Id" class="text-danger"></span>
							<input asp-for="Answers[i - 1].Selected" class="from-control" />@i)@answer.Text
							<span asp-validation-for="Answers[i - 1].Selected" class="text-danger"></span>
						</div>
					</div>
					i++;
				}
			}
			<br />
			}
		</div>
		@if (Model.PrevQuestion == null)
		{
			<input class="btn btn-success" type="submit" value="Prev Page" disabled="disabled" />
		}
		else
		{
			<input class="btn btn-success" type="submit" value="Prev Page" asp-route-id="@Model.PrevQuestion.Id" />
		}
		@if (Model.NextQuestion == null)
		{
			<input class="btn btn-success" type="submit" value="Next Page" disabled="disabled" />
		}
		else
		{
			<input class="btn btn-success" type="submit" value="Next Page" asp-route-id="@Model.NextQuestion.Id" />
		}
		<input class="btn btn-success" type="submit" value="End test" disabled="disabled" />
	</form>
</div>